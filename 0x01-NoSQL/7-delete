#!/usr/bin/env python3
"""
Delete all documents with name="Holberton school" in the 'school' collection in MongoDB
"""

import pymongo

def delete_documents(database_name):
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')
    
    # Access the specified database
    db = client[database_name]
    
    # Access the 'school' collection
    collection = db['school']

    # Delete documents with name="Holberton school"
    query = {"name": "Holberton school"}
    result = collection.delete_many(query)

    # Print delete result
    print(result.raw_result)

if __name__ == "__main__":
    import sys

    if len(sys.argv) != 2:
        print(f"Usage: {sys.argv[0]} <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    delete_documents(database_name)
