#!/usr/bin/env python3
"""
Create or use the database 'my_db' in MongoDB
"""

import pymongo

def use_or_create_database():
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')

    # Access or create 'my_db' database
    db = client['my_db']

    # Print message
    print("Database 'my_db' created/used successfully!")

if __name__ == "__main__":
    use_or_create_database()
