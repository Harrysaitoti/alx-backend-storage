#!/usr/bin/env python3
"""
List all documents with name starting by Holberton in the collection school
"""

import pymongo

def find_holberton_schools(database_name):
    """
    Find and print all documents with name starting by Holberton in the 'school' collection.

    Args:
        database_name: Name of the MongoDB database.

    Returns:
        None
    """
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')
    
    # Access the specified database
    db = client[database_name]
    
    # Access the 'school' collection
    collection = db['school']

    # Define the query using a regular expression to match names starting with "Holberton"
    query = {"name": {"$regex": "^Holberton", "$options": "i"}}  # Case-insensitive match
    
    # Find and print matching documents
    cursor = collection.find(query)
    for document in cursor:
        print(document)

if __name__ == "__main__":
    import sys

    if len(sys.argv) != 2:
        print(f"Usage: {sys.argv[0]} <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    find_holberton_schools(database_name)
