#!/usr/bin/env python3
"""
Insert a document into the 'school' collection in MongoDB
"""

import pymongo

def insert_document(database_name):
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')
    
    # Access the specified database
    db = client[database_name]
    
    # Access the 'school' collection
    collection = db['school']

    # Insert document
    document = {"name": "Holberton school"}
    result = collection.insert_one(document)

    # Print result
    print("WriteResult({ 'nInserted' :", result.inserted_id, "})")

if __name__ == "__main__":
    import sys

    if len(sys.argv) != 2:
        print(f"Usage: {sys.argv[0]} <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    insert_document(database_name)
