#!/usr/bin/env python3
"""
List documents with name="Holberton school" in the 'school' collection in MongoDB
"""

import pymongo

def find_documents(database_name):
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')
    
    # Access the specified database
    db = client[database_name]
    
    # Access the 'school' collection
    collection = db['school']

    # Find documents with name="Holberton school"
    query = {"name": "Holberton school"}
    documents = collection.find(query)

    # Print matching documents
    for doc in documents:
        print(doc)

if __name__ == "__main__":
    import sys

    if len(sys.argv) != 2:
        print(f"Usage: {sys.argv[0]} <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    find_documents(database_name)
