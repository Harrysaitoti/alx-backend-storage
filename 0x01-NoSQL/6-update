#!/usr/bin/env python3
"""
Add a new attribute 'address' with value '972 Mission street' to documents
with name="Holberton school" in the 'school' collection in MongoDB
"""

import pymongo

def update_documents(database_name):
    # Connect to MongoDB
    client = pymongo.MongoClient('mongodb://localhost:27017/')
    
    # Access the specified database
    db = client[database_name]
    
    # Access the 'school' collection
    collection = db['school']

    # Update documents with name="Holberton school"
    query = {"name": "Holberton school"}
    update = {"$set": {"address": "972 Mission street"}}
    result = collection.update_many(query, update)

    # Print update result
    print(result.raw_result)

if __name__ == "__main__":
    import sys

    if len(sys.argv) != 2:
        print(f"Usage: {sys.argv[0]} <database_name>")
        sys.exit(1)

    database_name = sys.argv[1]
    update_documents(database_name)
